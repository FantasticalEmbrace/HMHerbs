# H&M Herbs & Vitamins - Environment Configuration

# Server Configuration
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=hmherbs

# JWT Configuration
# CRITICAL: Generate a strong JWT secret with at least 32 characters
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production

# Redis Configuration (Optional - for caching)
# REDIS_URL=redis://localhost:6379

# Email Configuration (for order confirmations, EDSA bookings, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here

# Payment Gateway (Stripe)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# File Upload Configuration
UPLOAD_DIR=uploads
MAX_FILE_SIZE=5242880

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# EDSA Service Configuration
EDSA_SERVICE_ENABLED=true
EDSA_SERVICE_PRICE=75.00

# Shipping Configuration
FREE_SHIPPING_THRESHOLD=25.00
DEFAULT_SHIPPING_COST=5.99

# Tax Configuration
DEFAULT_TAX_RATE=0.08
