# HM Herbs & Vitamins - Environment Configuration Template
# Copy this file to .env and update the values for your environment

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL=http://localhost:8000

# Database Configuration
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_database_password
DB_NAME=hmherbs

# Authentication & Security
# CRITICAL: Generate a strong JWT secret with at least 32 characters
# Use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secure_jwt_secret_key_here_minimum_32_characters
POS_ENCRYPTION_KEY=your_pos_encryption_key_32_characters_minimum

# Redis Configuration (Optional - for caching)
# REDIS_URL=redis://localhost:6379

# Logging Configuration
LOG_LEVEL=info

# Email Configuration (if using email features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASS=your_app_password

# Payment Gateway Configuration (if using payments)
# STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
# STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# PAYPAL_CLIENT_ID=your_paypal_client_id
# PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# File Upload Configuration
# MAX_FILE_SIZE=10485760
# UPLOAD_PATH=./uploads

# Rate Limiting Configuration
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100
